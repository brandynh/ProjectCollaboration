
<!-- LOGIN FORM (TITLE)--> 
<h2 class="title is-2 has-text-white"> WELCOME! PLEASE LOGIN </h2>

<form id="login-form">
<!-- DIV CLASS USED TO BE "LOGIN" --> 
    <div class="login">

    <!-- USERNAME DIV -->
        <div class="field">
            <label class="label"> 
        <h3 class = "has-text-white"> USERNAME </h3> </label>
            <div class="control has-icons-left has-icons-right">
                <input id="signupUsername" class="input" type="text" placeholder="Enter Username" value="">
            </div>
        </div>

<!-- PASSWORD DIV --> 
        <div class="field">
            <label class="label"> <h3 class = "has-text-white"> PASSWORD </h3></label>
            <div class="control has-icons-left has-icons-right">
                <input id="signupPassword" class="input" type="password" placeholder="Enter Password" value="">
            </div>
        </div>

<!-- BUTTON DIVS -->
        <div class="field is-grouped">
        <!-- SUMBIT BUTTON -->
            <div class="control">
                <button class="button is-link">Submit</button>
            </div>

        <!-- CANCEL BUTTON --> 
            <div class="control">
                <button class="button is-link is-light">Cancel</button>
            </div>

        </div>
    </div>
</form>
<!-- SCRIPT FOR LOGIN --> 
<script src="../../js/login.js"></script>
